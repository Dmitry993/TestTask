@using NewsPortal.Logic.Enums
@model NewsPortal.Logic.Models.ApplicationUser

@{
    ViewBag.Title = "UserProfile";
    Layout = "_Layout";
}

<div class="row">
    <div>
        <h1>Personal page</h1>

        @(Html.ActionLink("Create publication", "CreatePost", "Post", null, new { @class = "btn btn-success" }))
        @(Html.ActionLink("Go back", "Index", "Home", null, new { @class = "btn btn-primary" }))

    </div>
</div>
<div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">ID: @(Model.Id)</li>
        <li class="list-group-item">User name: @(Model.UserName)</li>
        <li class="list-group-item">First name: @(Model.FirstName)</li>
        <li class="list-group-item">Last name: @(Model.LastName)</li>
        <li class="list-group-item">Email: @(Model.Email)</li>
    </ul>
</div>
<div>
    <div class="row">
        <h5>User posts:</h5>
        <div class="btn-group btn-group-sm" style="margin-left: 400px" role="group">
            @Html.ActionLink("By Date", "SortPosts", "Post", new
            {
                sort = Sort.ByDate,
                pageName = @ViewData["Title"]
            }, new { @class = "btn btn-outline-dark" })
            @Html.ActionLink("By Rating", "SortPosts", "Post", new
            {
                sort = Sort.ByRating,
                pageName = @ViewData["Title"]
            }, new { @class = "btn btn-outline-dark" })
            @if (ViewData["direction"].Equals(SortDirection.Ascending))
            {
                @Html.ActionLink("Ascending", "SortPosts", "Post", new
                {
                    sort = ViewData["sort"],
                    direction = SortDirection.Descending,
                    pageName = @ViewData["Title"]
                }, new { @class = "btn btn-outline-dark" })
            }
            else
            {
                @Html.ActionLink("Descending", "SortPosts", "Post", new
                {
                    sort = ViewData["sort"],
                    direction = SortDirection.Ascending,
                    pageName = @ViewData["Title"]
                }, new { @class = "btn btn-outline-dark" })
            }

        </div>
    </div>
    <div>
        @await Component.InvokeAsync("PostList", new
        {
            id = Model.Id, 
            sort = ViewData["sort"], 
            direction = ViewData["direction"]
        })
    </div>
</div>
