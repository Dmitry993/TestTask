@inject Microsoft.AspNetCore.Http.IHttpContextAccessor context
@model NewsPortal.Logic.Model.UserPost
@{
    ViewData["Title"] = "Post";
    Layout = "_Layout";
}

<div class="form-horizontal">
    <div class="form-group">
        <h4>@Model.Name</h4>
    </div>
    <div class="form-group">
        @Model.Description
    </div>
    <hr/>
</div>
<div class="row">
    <div>
        @if (context.HttpContext.Request.Cookies["UserId"].Equals(Model.AuthorId.ToString()))
        {
            @(Html.ActionLink("Edit Post", "EditPost", "Post", Model, new { @class = "btn btn-success" }))
        }

        <input type="button" class = "btn btn-primary" onclick="history.go(-1)" value="Go back" />
    </div>
</div>