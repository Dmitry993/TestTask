@model IEnumerable<NewsPortal.Logic.Model.UserPost>
@{   
    Layout = "_Layout";
}

<div> 
    @foreach (var item in Model)
    {
<div class="form-horizontal">
    <hr />
    <div class="form-group">
        <h4>@Html.ActionLink(item.Name, "Post", "Post", item)</h4>
    </div>
    <div class="form-group">
        @item.Description
    </div>
</div>
    }
</div>